<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type ThemeVariantScope}" TargetType="ThemeVariantScope">
        <Setter Property="TextElement.Foreground" Value="{StaticResource TextFillColor1Brush}" />
        <Setter Property="TextElement.FontSize" Value="{StaticResource GlobalFontSize}" />
    </ControlTheme>
</ResourceDictionary>
