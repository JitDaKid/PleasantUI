<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type AdornerLayer}" TargetType="AdornerLayer">
        <Setter Property="DefaultFocusAdorner">
            <FocusAdornerTemplate>
                <Border BorderThickness="2"
                        BorderBrush="{StaticResource FocusStrokeColorOuterBrush}"
                        Margin="0"
                        CornerRadius="4">
                    <Border BorderThickness="1"
                            BorderBrush="{StaticResource FocusStrokeColorInnerBrush}"
                            CornerRadius="4" />
                </Border>
            </FocusAdornerTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>