<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTheme x:Key="{x:Type PleasantBorder}" TargetType="PleasantBorder">
        <Setter Property="BorderThickness" Value="{StaticResource ControlBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderColor}" />
        
        <Style Selector="^[BackgroundLevel=Level1]">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor1}" />
        </Style>
        <Style Selector="^[BackgroundLevel=Level2]">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor2}" />
        </Style>
        <Style Selector="^[BackgroundLevel=Level3]">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor3}" />
        </Style>
        <Style Selector="^[BackgroundLevel=Level4]">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor4}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
