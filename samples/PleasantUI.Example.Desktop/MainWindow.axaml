<PleasantWindow xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:example="clr-namespace:PleasantUI.Example;assembly=PleasantUI.Example"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                x:Class="PleasantUI.Example.Desktop.MainWindow"
                Title="PleasantUI"
                TitleBarType="ClassicExtended"
                WindowStartupLocation="CenterScreen"
                ExtendsContentIntoTitleBar="True"
                Icon="PleasantUIIcon.ico"
                DisplayIcon="{StaticResource PleasantUILogo}"
                DisplayTitle="{StaticResource PleasantUINoLogo}"
                MinWidth="600"
                MinHeight="500"
                Width="1200"
                Height="700"
                Subtitle="Example">
    <PleasantWindow.LeftTitleBarContent>
        <Panel Width="45"/>
    </PleasantWindow.LeftTitleBarContent>
    
    <example:MainView />
</PleasantWindow>
