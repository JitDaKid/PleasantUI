<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PleasantUI.Example.Pages.HomePage">
    <Panel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border Background="{StaticResource SystemAccentColorBrush}" Width="100" Height="40" CornerRadius="8 0 0 8" />
                <Border Background="{StaticResource SystemInvertAccentColorBrush}" Width="100" Height="40" CornerRadius="0 8 8 0" />
            </StackPanel>
            
            <TextBlock Text="PleasantUI" TextAlignment="Center" FontWeight="Bold" FontSize="34" />
            <TextBlock Text="Choose your side!" TextAlignment="Center" Foreground="{StaticResource TextFillColorSecondaryBrush}" />
        </StackPanel>
    </Panel>
</UserControl>
